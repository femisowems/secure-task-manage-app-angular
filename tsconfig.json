/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": ".",
    "paths": {
      "@secure-task-manage-app-angular/data": [
        "libs/data/src/lib/entities.ts"
      ],
      "@secure-task-manage-app-angular/data/*": [
        "libs/data/src/lib/*"
      ],
      "@secure-task-manage-app-angular/auth": [
        "libs/auth/src/lib/rbac.service.ts"
      ],
      "@secure-task-manage-app-angular/auth/*": [
        "libs/auth/src/lib/*"
      ],
      "@secure-task-manage-app-angular/design-system": [
        "libs/design-system/tokens.ts"
      ],
      "@secure-task-manage-app-angular/design-system/*": [
        "libs/design-system/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}